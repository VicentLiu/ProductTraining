<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewTabProductionSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/buttonSearchTabOne"
            android:ems="10"
            android:hint="@string/tabone_search_hint" >

        </AutoCompleteTextView>

        <Button
            android:id="@+id/buttonSearchTabOne"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="@string/search" />

    </RelativeLayout>
    <ListView
        android:id="@+id/listViewProductItems"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="#dbdbdb"
        android:dividerHeight="1dp">
    </ListView>
</LinearLayout>
